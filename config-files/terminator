# $HOME/.config/terminator/config

[global_config]
  focus = sloppy
  suppress_multiple_term_dialog = True
[keybindings]
[profiles]
  [[default]]
    show_titlebar = False
    scrollbar_position = hidden
    background_darkness = 0.85
    background_type = transparent
    scrollback_infinite = true
[layouts]
  [[default]]
    [[[window0]]]
      type = Window
    [[[terminal1]]]
      type = Terminal
      parent = window0
  [[dev]]
    [[[window]]]
      type = Window
      order = 0 
    [[[root]]]
      type = HPaned
      order = 0
      parent = window
    [[[left]]]
      type = VPaned
      order = 0
      parent = root
    [[[right]]]
      type = VPaned
      order = 1
      parent = root
    [[[terminal1]]]
      type = Terminal
      order = 0
      parent = left
      command = terminal1order0; bash
    [[[terminal2]]]
      type = Terminal
      order = 1
      parent = left
      command = terminal2order1; bash
    [[[terminal3]]]
      type = Terminal
      order = 0
      parent = right
      command = terminal3order0; bash
    [[[terminal4]]]
      type = Terminal
      order = 1
      parent = right
      command = terminal4order1; bash
[plugins]

